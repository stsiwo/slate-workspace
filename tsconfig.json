{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es5",
    "lib": ["dom", "es6", "es2017", "dom.iterable", "es2019.array" ],
    "types": ["reflect-metadata", "jest"],
    "module": "commonjs",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "esModuleInterop": true
  }
}
